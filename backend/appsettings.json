{
  "ConnectionStrings": {
    // ===== CONEXIÓN A BASE DE DATOS MYSQL =====
    // DefaultConnection: cadena de conexión principal para la base de datos MySQL local
    // Server: dirección del servidor MySQL (localhost = este equipo)
    // Port: puerto de MySQL (3306 es el puerto por defecto)
    // Database: nombre de la base de datos (flexoapp_bd)
    // User: usuario de MySQL (root = administrador)
    // Password: contraseña del usuario MySQL
    // AllowUserVariables: permite usar variables de usuario en consultas SQL
    // UseAffectedRows: retorna el número de filas afectadas en lugar de filas encontradas
    "DefaultConnection": "Server=localhost;Port=3306;Database=flexoapp_bd;User=root;Password=12345;AllowUserVariables=True;UseAffectedRows=False;",
    
    // LocalConnection: cadena de conexión alternativa (misma configuración que DefaultConnection)
    // Se mantiene por compatibilidad con código legacy
    "LocalConnection": "Server=localhost;Port=3306;Database=flexoapp_bd;User=root;Password=12345;AllowUserVariables=True;UseAffectedRows=False;"
  },
  "JwtSettings": {
    "SecretKey": "FlexoAPP-Super-Secret-Key-2024-Production-Ready-Ultra-Stable",
    "Issuer": "FlexoAPP",
    "Audience": "FlexoAPP-Users",
    "ExpirationMinutes": 1440,
    "RefreshTokenExpirationDays": 90,
    "AutoRefreshMinutes": 60,
    "RememberMeExpirationDays": 365
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "FlexoAPP": "Information"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:7003",

  "FlexoAPP": {
    "ApplicationName": "FlexoAPP - Sistema de Gestión Flexográfica",
    "Version": "2.0.0",
    "Environment": "Production",
    "Features": {
      "EnableSwagger": true,
      "EnableSignalR": true,
      "EnableAudit": true,
      "EnableExcelImport": true,
      "EnableAutoReconnect": true,
      "EnableKeepAlive": true,
      "EnableHealthChecks": true,
      "EnableMachineBackup": true
    },
    "Stability": {
      "EnableConnectionPooling": true,
      "EnableRetryPolicy": true,
      "MaxRetryAttempts": 5,
      "RetryDelaySeconds": 2,
      "HealthCheckIntervalSeconds": 30,
      "AutoRestartOnFailure": true
    }
  },
  "BackupSettings": {
    "Path": "./Backups/Machines",
    "AutoBackupEnabled": true,
    "AutoBackupIntervalHours": 24,
    "MaxBackupRetentionDays": 30,
    "CompressBackups": true,
    "VerifyIntegrityOnCreate": true,
    "MaxBackupSizeMB": 100,
    "BackupFormats": ["zip", "json"],
    "NotificationSettings": {
      "EnableEmailNotifications": false,
      "NotifyOnSuccess": false,
      "NotifyOnFailure": true,
      "EmailRecipients": []
    }
  }
}