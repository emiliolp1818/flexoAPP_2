    ::ng-deep {
        /* Encabezados de las pestañas */
        .mat-mdc-tab-header {
            border-bottom: 1px solid #e2e8f0; /* Borde inferior */
            background: #f8fafc;      /* Fondo gris muy claro */
        }

        /* Etiquetas de las pestañas */
        .mat-mdc-tab {
            min-width: 120px;          /* Ancho mínimo */
            padding: 0 16px;           /* Espaciado horizontal */
            font-weight: 500;          /* Peso medio */
            color: #64748b;            /* Color gris */
            transition: all 0.3s ease; /* Transición suave */

            /* Responsive: Ancho completo en móviles */
            @media (max-width: 768px) {
                min-width: auto;       /* Sin ancho mínimo */
                flex: 1;               /* Ocupar espacio disponible */
                font-size: 12px;       /* Fuente más pequeña */
            }

            /* Pestaña activa */
            &.mdc-tab--active {
                color: #2563eb;        /* Color azul */
                background: rgba(37, 99, 235, 0.05); /* Fondo azul muy claro */
            }

            /* Efecto hover */
            &:hover:not(.mdc-tab--active) {
                background: rgba(100, 116, 139, 0.05); /* Fondo gris claro */
                color: #475569;        /* Color gris más oscuro */
            }
        }

        /* Indicador de pestaña activa */
        .mat-mdc-tab-group .mat-mdc-tab-header .mat-mdc-tab-header-pagination-after,
        .mat-mdc-tab-group .mat-mdc-tab-header .mat-mdc-tab-header-pagination-before {
            display: none;             /* Ocultar paginación */
        }

        /* Línea indicadora */
        .mdc-tab-indicator__content--underline {
            border-color: #2563eb;     /* Color azul */
            border-width: 3px;         /* Grosor de línea */
        }

        /* Cuerpo de las pestañas */
        .mat-mdc-tab-body-wrapper {
            padding: 0;                /* Sin espaciado */
        }
    }
}

